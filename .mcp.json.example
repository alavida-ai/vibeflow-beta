{
    "mcpServers": {
        "firecrawl": {
            "type": "http",
            "url": "<FIRECRAWL_URL>"
        },
        "dataforseo": {
            "type": "stdio",
            "command": "npx",
            "args": [
                "@smithery/cli@latest",
                "run",
                "@moaiandin/mcp-dataforseo",
                "--key",
                "<DATAFORSEO_API_KEY>",
                "--profile",
                "<DATAFORSEO_PROFILE>"
            ]
        },
        "perplexity": {
            "type": "stdio",
            "command": "npx",
            "args": [
                "-y",
                "@perplexity-ai/mcp-server"
            ],
            "env": {
                "PERPLEXITY_API_KEY": "<PERPLEXITY_API_KEY>"
            }
        }
    }
}