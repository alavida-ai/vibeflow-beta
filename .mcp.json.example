{
  "mcpServers": {
    "firecrawl": {
      "type": "http",
      "url": "<FIRECRAWL_URL>"
    },
    "dataforseo": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "dataforseo-mcp-server"
      ],
      "env": {
        "DATAFORSEO_USERNAME": "<DATAFORSEO_USERNAME>",
        "DATAFORSEO_PASSWORD": "<DATAFORSEO_PASSWORD>"
      }
    },
    "perplexity": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "perplexity-mcp"
      ],
      "env": {
        "PERPLEXITY_API_KEY": "<PERPLEXITY_API_KEY>",
        "PERPLEXITY_TIMEOUT_MS": "600000"
      }
    },
    "MarketingArchitectureDocs": {
      "type": "http",
      "url": "https://marketingarchitect.ai/mcp"
    },
    "Notion": {
      "type": "http",
      "url": "https://mcp.notion.com/mcp"
    },
    "x-scraper": {
      "type": "http",
      "url": "https://x-scraper.staging.alavida.ai/mcp"
    }
  }
}