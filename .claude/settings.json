{
    "permissions": {
        "allow": [
            "Write",
            "Edit",
            "Read",
            "Grep",
            "Glob",
            "Bash",
            "NotebookEdit",
            "SlashCommand",
            "Skill"
        ],
        "deny": [
            "Bash(rm:*)",
            "Bash(rmdir:*)",
            "Bash(rm -rf:*)",
            "Bash(rm -r:*)",
            "Bash(sudo rm:*)",
            "Bash(dd:*)",
            "Bash(mkfs:*)",
            "Bash(format:*)",
            "Bash(>:*)",
            "Bash(shred:*)"
        ]
    },
    "enableAllProjectMcpServers": true,
    "hooks": {
        "SessionStart": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/SessionStart.sh"
                    }
                ]
            }
        ]
    }
}